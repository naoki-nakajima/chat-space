.side-bar
  .side-bar__side-header
    .side-bar__side-header__top-items
      .side-bar__side-header__top-items__name
        = current_user.name
      %ul.side-bar__side-header__top-items__icon
        %li.side-bar__side-header__top-items__icon__btn
          = link_to new_group_path do
            = icon('far', 'edit', class: 'btn-edit')
        %li.side-bar__side-header__top-items__icon__btn
          = link_to edit_user_path(current_user) do
            = icon('far', 'cog', class: 'btn-cog')
  
  .side-bar__side-group
    - current_user.groups.each do |group|
      .side-bar__side-group__list
        = link_to group_messages_path(group) do
          .side-bar__side-group__list__name 
            = group.name
          .side-bar__side-group__list__message
            まだメッセージはありません